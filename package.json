{
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write --plugin @prettier/plugin-php src/ generator/",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.(php|js|yml|md|json)": "prettier --write --plugin @prettier/plugin-php"
  }
}
